@model IEnumerable<PizzaProjectAlt.Models.ApplicationUser>
@{
    ViewBag.Title = "Our Community";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section pagecss {
    @Styles.Render("~/bundles/pizzacss")
}


<h2>Users</h2>

<div class="row">&nbsp;</div>

<table class="table table-color table-bordered" id="search">
    <thead class="table-head-color">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProfilePicture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FavoritePizzaria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PizzaEatingStyle)
            </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.ProfilePicture)" alt="Users Picture" style="height:50px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FavoritePizzaria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PizzaEatingStyle)
                </td>
            </tr>
        </tbody>
    }

</table>

@section Scripts {

    <script>
        $(document).ready(function () {
            $('#search').DataTable();
        });</script>
}

